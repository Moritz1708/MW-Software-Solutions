@page "/Kontakt"
<MudContainer MaxWidth="MaxWidth.Small">
    <MudGrid>
        <MudItem xs="12" sm="12" md="12" lg="12" xl="12" xxl="12">
            <MudGrid>
                <MudItem xs="6" sm="6" md="6" lg="6" xl="6" xxl="6">
                    <MudTextField Class="mt-5" T="string" Variant="Variant.Text" Label="Firstname"></MudTextField>
                </MudItem>
                <MudItem xs="6" sm="6" md="6" lg="6" xl="6" xxl="6">
                    <MudTextField Class="mt-5" T="string" Variant="Variant.Text" Label="Lastname"></MudTextField>
                </MudItem>
            </MudGrid>
            <MudTextField Class="mt-5" T="string" Variant="Variant.Text" Label="Email"></MudTextField>
            <MudTextField Class="mt-5" T="string" Variant="Variant.Text" Label="Subject"></MudTextField>
            
            <MudTextField Class="mt-5" T="string" Label="Message" Variant="Variant.Outlined" Lines="3" />
            <MudContainer Class="d-flex justify-content-center align-items-center mt-5">
                <MudButton Size="Size.Medium" ButtonType="ButtonType.Button" Variant="Variant.Text">Absenden</MudButton>
            </MudContainer>
        </MudItem>
    </MudGrid>
</MudContainer>